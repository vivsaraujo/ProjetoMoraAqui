<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vivian.projetomoraaqui.TelaNovo"
    tools:showIn="@layout/activity_tela_novo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/edt_fone"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_design"
                android:hint="(99)99999-9999"
                android:inputType="phone"
                android:padding="7dp"
                android:textAlignment="center"
                android:textSize="22dp" />

            <Spinner
                android:id="@+id/spin_tamanho"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:background="@drawable/spinner_tamanho_design"
                android:padding="10dp"
                android:spinnerMode="dropdown"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/spin_tipo"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:background="@drawable/spinner_tipo_design"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:spinnerMode="dropdown"
                android:textAlignment="center" />

            <Switch
                android:id="@+id/swt_opcao"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:checked="true"
                android:text="Em Construção?"
                android:textOff="Não"
                android:textOn="Sim"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_pronto"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/screen_border"
                    android:text="Pronto"
                    android:textColor="@color/colorTexto" />

                <Button
                    android:id="@+id/bt_limpar"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/screen_border"
                    android:text="limpar"
                    android:textColor="@color/colorTexto" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
